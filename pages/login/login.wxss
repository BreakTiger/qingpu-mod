.login{
  width: 100%;
  height: 1200rpx;
  position: relative
}
.login image{
  width: 100%;
  height: 100%
}
.box{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 1200rpx;
}
.box .logo{
  width: 100%;
  height: 200rpx;
  text-align: center;
  margin-top: 150rpx
}
.box .logo image{
  width: 180rpx;
  height: 180rpx
}
.name{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 50rpx;
  margin-bottom:150rpx;
}
.bar{
  width: 85%;
  display: flex;
  flex-direction: row;
  align-items: center;

  margin: auto;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  margin-top: 40rpx
}
.input{
  width: 500rpx;
  height: 80rpx;
  background-color: #000;
  padding: 0 20rpx;
  margin-left: 30rpx;
}
.box button{
  background: #2B6BB3;
  font-size: 30rpx;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx
}
.btn{
  width: 100%;
  height: 100rpx;
  background: #2B6BB3;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: #2B6BB3;
  
}
.box button::after{
  border: none
}